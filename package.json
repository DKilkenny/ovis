{
  "name": "OVis",
  "version": "1.0.0",
  "description": "A visualization tool for OpenMDAO",
  "main": "main.js",
  "repository": "https://github.com/OpenMDAO/zune",
  "keywords": [
    "OpenMDAO",
    "Visualization"
  ],
  "author": "NASA Glenn Research Center",
  "devDependencies": {
    "electron": "~1.7.8",
    "electron-builder": "^20.0.5",
    "electron-packager": "^10.1.2",
    "spectron": "^3.8.0"
  },
  "dependencies": {
    "electron-log": "^2.2.14",
    "pickle": "^0.2.0",
    "promise": "^8.0.1",
    "request": "^2.83.0",
    "sqlite3": "^3.1.13",
    "wine": "^0.9.8"
  },
  "build": {
    "appId": "nasa.grc.ovis",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "extraResources": [
      "data_server",
      "components",
      "main.py"
    ]
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron ./app --enable-logging",
    "dev": "NODE_ENV='development' npm run start",
    "dist": "build -mwl --x64 --ia32"
  },
  "postinstall": "electron-builder install-app-deps"
}
